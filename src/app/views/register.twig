{% extends 'base.twig' %}

{% block body %}
    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error|nl2br }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <h1>Registration</h1>
    {% if user is not defined %}
        <form action="/register" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Please register</h1>

            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="" autocomplete="off" name="email">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputUsername" class="sr-only">First Name</label>
                    <input type="text" id="inputUsername" class="form-control" placeholder="First Name" required="" autofocus="" autocomplete="off" name="first_name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputUsername" class="sr-only">Last Name</label>
                    <input type="text" id="inputUsername" class="form-control" placeholder="Last Name" required="" autofocus="" autocomplete="off" name="last_name">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-7">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" minlength="6" id="inputPassword" class="form-control" placeholder="Password must: be 6 chars min, have at least 1 capital char, special char and digit." required="" name="password">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputPasswordConfirm" class="sr-only">Confirm Password</label>
                    <input type="password" id="inputPasswordConfirm" class="form-control" placeholder="Confirm your password." required="" name="password_confirmation">
                </div>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
    {% else %}
        <p>You have already registered, {{ user['name'] }}!</p>
    {% endif %}
{% endblock %}